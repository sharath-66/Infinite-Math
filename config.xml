<?xml version='1.0' encoding='utf-8'?>
<widget id="com.GDG.MathInfinite" version="1.1.2" xmlns="http://www.w3.org/ns/widgets" 
xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <!--Change name of the app when using with other apps-->

    <name>Learn Math Magical (âˆž)</name>
    <!--Need To change even the description of app-->
    <description>
        Maths Game meant for kids infinite game
    </description>


    <!--Also change about author-->
    <author email="youremail@gmail.com" href="">
        Self
    </author>


    <content src="index.html" />
    <access origin="*" />
    <allow-navigation href="*" />
    <allow-intent href="*" />
    <platform name="android">
        <preference name="android-minSdkVersion" value="20" />
        <preference name="android-targetSdkVersion" value="28" />
        <allow-intent href="market:*" />
    </platform>
    
    <preference name="DisallowOverscroll" value="true" />
    <plugin name="cordova-plugin-whitelist" spec="~1.2.0" />
    <plugin name="cordova-plugin-console" spec="~1.0.1" />
    <plugin name="cordova-plugin-statusbar" spec="~1.0.1" />

   
    <preference name="orientation" value="portrait" />
    <preference name="android-build-tool" value="gradle" />  
    <preference name="Fullscreen" value="true" /><!--Add this if and only if you are designing games then to set it to full screen mode-->
    
    <plugin name="cordova-plugin-admobpro" source="npm" >
        <!--Just need to change value I think-->
        <!-- Live Ad id : "ca-app-pub-5039568744793885~8856099693" -->
